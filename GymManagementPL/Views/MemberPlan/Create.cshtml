@model CreateMemberPlanViewModel

@{
    ViewData["Title"] = "Create";
}

@if (TempData["ErrorMessage"] is not null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-route="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="MemberId" class="form-label">Member</label>
                            <select asp-for="MemberId" asp-items="ViewBag.Members" class="form-select">
                                <option value="">-- Select Member --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PlanId" class="form-label">Plan</label>
                            <select asp-for="PlanId" asp-items="ViewBag.plans" class="form-select">
                                <option value="">-- Select Plan --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Create Membership</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <Partial name="_ValidationScriptsPartial" />
    <script src="~\js\alert.js" asp-append-version="true"></script>
}


